<div class="container" id="logo" >
    <h1 style="text-align: center">
        Compare Me
    </h1>
        <canvas id="myChart"></canvas>
        <div class="row">
            <div class="col-md-6">
                <div class="pre-scrollable">
                    {{#if word1}}
                        {{#each word1}}
                            <div class="card-body">
                                <h5 class="card-title">{{this.name}}</h5>
                                <img src="{{this.profile_img}}" alt="{{this.name}}" class="img-thumbnail">
                                <p class="card-text">{{this.text}}</p>
                            </div>
                        {{/each}}
                        {{else}}
                        <h3 style="text-align: center">
                            Please make a search query 
                        </h3>
                    {{/if}}
                </div>
            </div>
            <div class="col-md-6">
                <div class="pre-scrollable">
                {{#if word2}}
                    {{#each word2}}
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <img src="{{this.profile_img}}" alt="{{this.name}}" class="img-thumbnail">
                            <p class="card-text">{{this.text}}</p>
                        </div>
                    {{/each}}
                    {{else}}
                    <h3 style="text-align: center">
                        Please make a search query 
                    </h3>
                {{/if}} 
                </div>
            </div>
        </div>
</div>

